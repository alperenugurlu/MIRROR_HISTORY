{
  "name": "mirror-history",
  "version": "0.1.0",
  "description": "Life version control â€” Money Diff + Time Machine",
  "type": "module",
  "main": "dist-electron/main.cjs",
  "scripts": {
    "dev:electron": "esbuild electron/main.ts electron/preload.ts --bundle --platform=node --outdir=dist-electron --external:electron --external:better-sqlite3 --format=cjs --out-extension:.js=.cjs --sourcemap",
    "dev:renderer": "vite",
    "dev": "npm run dev:electron && concurrently -k -n renderer,electron \"npm run dev:renderer\" \"wait-on tcp:5173 && electron .\"",
    "build:renderer": "vite build",
    "build:electron": "esbuild electron/main.ts electron/preload.ts --bundle --platform=node --outdir=dist-electron --external:electron --external:better-sqlite3 --format=cjs --out-extension:.js=.cjs --minify",
    "build": "npm run build:renderer && npm run build:electron",
    "build:server": "esbuild server/standalone.ts --bundle --platform=node --outdir=dist-server --external:better-sqlite3 --external:bcryptjs --format=esm --minify",
    "start": "node dist-server/standalone.js",
    "start:dev": "npx tsx server/standalone.ts",
    "seed:demo": "node scripts/seed-demo.mjs",
    "demo": "node scripts/seed-demo.mjs && MIRROR_HISTORY_DB_PATH=/tmp/mirror-history-demo/mirror-history.db npx tsx server/standalone.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "postinstall": "electron-rebuild -f -w better-sqlite3"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.78.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/static": "^7.0.4",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^11.0.0",
    "date-fns": "^3.6.0",
    "fast-xml-parser": "^5.3.7",
    "fastify": "^4.29.1",
    "fluent-ffmpeg": "^2.1.3",
    "grammy": "^1.40.0",
    "ical.js": "^2.2.1",
    "jsonwebtoken": "^9.0.3",
    "papaparse": "^5.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.8",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.3.0",
    "@types/papaparse": "^5.3.14",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "esbuild": "^0.19.12",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^1.2.0",
    "wait-on": "^7.2.0"
  }
}
